{
  "manifest_version": 3,
  "name": "Clipboard to QR Code",
  "version": "1.0",
  "description": "Converts clipboard content to QR codes and copies the QR image back to clipboard",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "logo-16.png",
      "48": "logo-48.png",
      "128": "logo-128.png"
    }
  },
  "permissions": [
    "clipboard"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "logo-16.png",
    "48": "logo-48.png",
    "128": "logo-128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
